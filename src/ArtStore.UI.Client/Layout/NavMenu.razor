@implements IDisposable

@inject NavigationManager NavigationManager

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ShoppingCart" IconColor="Color.Primary">Order New</MudNavLink>

    @* <MudNavLink Href="/products-menu" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.MenuBook" IconColor="Color.Primary">Menu</MudNavLink> *@
    
    <MudNavLink Href="/order-management" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.ManageAccounts" IconColor="Color.Primary">Order Manager</MudNavLink>
    
    <MudNavLink Href="/order-list" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.History" IconColor="Color.Primary">Order List</MudNavLink>

    @* <MudNavLink Href="counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Add">Counter</MudNavLink>
    
    <MudNavLink Href="weather" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.List">Weather</MudNavLink> *@

    @* <MudNavLink Href="auth" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Lock">Auth Required</MudNavLink> *@

    <MudNavGroup Title="Management" Expanded=true>
        <MudNavLink Href="/management/categories" Icon="@Icons.Material.Filled.Add">Categories</MudNavLink>
        <MudNavLink Href="/management/products" Icon="@Icons.Material.Filled.Add">Products</MudNavLink>
        <MudNavLink Href="/management/coupons" Icon="@Icons.Material.Filled.Add">Coupons</MudNavLink>
    </MudNavGroup>

    <AuthorizeView>
        <Authorized>
            <MudNavLink Href="Account/Manage" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person">@context.User.Identity?.Name</MudNavLink>
            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="mud-nav-link mud-ripple">
                    <MudIcon Icon="@Icons.Material.Filled.Logout" Color="Color.Info" Class="mr-3"></MudIcon> Logout
                </button>
            </form>
            @* <MudNavGroup Title="Management" Expanded=true>
                <MudNavLink Href="/management/categories">Categories</MudNavLink>
                <MudNavLink Href="/management/products">Products</MudNavLink>
            </MudNavGroup> *@
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="Account/Register" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Person">Register</MudNavLink>
            <MudNavLink Href="Account/Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Password">Login</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>


@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

