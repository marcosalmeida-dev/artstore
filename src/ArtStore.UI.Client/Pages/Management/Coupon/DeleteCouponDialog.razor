@using ArtStore.Shared.DTOs.Coupon

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3" Color="Color.Error" /> Delete Coupon
        </MudText>
    </TitleContent>
    <DialogContent>
        <div class="d-flex align-center mb-4">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" Class="mr-3" />
            <div>
                <MudText Typo="Typo.body1">Are you sure you want to delete the coupon <strong>"@Coupon?.Code"</strong>?</MudText>
                <MudText Typo="Typo.body2" Class="mud-text-secondary mt-1">
                    This action will permanently remove the coupon from the system.
                </MudText>
            </div>
        </div>

        @if (Coupon != null)
        {
            <MudAlert Severity="Severity.Info" Class="mb-3">
                <MudText>Coupon Name: <strong>@Coupon.Name</strong></MudText>
                <MudText Class="mt-1">Type: <strong>@Coupon.Type.ToString()</strong></MudText>
                <MudText Class="mt-1">Used Count: <strong>@Coupon.UsedCount times</strong></MudText>
            </MudAlert>
        }

        @if (Coupon?.UsedCount > 0)
        {
            <MudAlert Severity="Severity.Warning" Class="mb-3">
                <MudText><strong>Warning:</strong> This coupon has been used @Coupon.UsedCount times.</MudText>
                <MudText Class="mt-1">Deleting this coupon may affect order history and reports.</MudText>
            </MudAlert>
        }

        <MudAlert Severity="Severity.Error" Class="mb-3">
            <MudText><strong>Warning:</strong> This action cannot be undone.</MudText>
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Delete"
                   Disabled="@(deleting || Coupon?.UsedCount > 0)">
            @if (deleting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Deleting...</MudText>
            }
            else
            {
                <MudText>Delete</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@inject ISnackbar Snackbar
@inject HttpClient HttpClient

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public CouponDto? Coupon { get; set; }

    private bool deleting = false;

    private async Task Delete()
    {
        if (Coupon == null) return;

        deleting = true;
        try
        {
            var response = await HttpClient.DeleteAsync($"/api/admin/coupons/{Coupon.Id}");

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Result<int>>();
                if (result?.Succeeded == true)
                {
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    var errorContent = await response.Content.ReadAsStringAsync();
                    Snackbar.Add($"Error: {errorContent}", Severity.Error);
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error deleting coupon: {errorContent}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting coupon: {ex.Message}", Severity.Error);
        }
        finally
        {
            deleting = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}