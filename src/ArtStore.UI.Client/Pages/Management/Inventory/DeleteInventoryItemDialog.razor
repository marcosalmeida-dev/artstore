@using ArtStore.Shared.DTOs.Inventory

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3" Color="Color.Error" /> Delete Inventory Item
        </MudText>
    </TitleContent>
    <DialogContent>
        <div class="d-flex align-center mb-4">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" Class="mr-3" />
            <div>
                <MudText Typo="Typo.body1">Are you sure you want to delete the inventory item <strong>"@Item?.ProductName"</strong>?</MudText>
                <MudText Typo="Typo.body2" Class="mud-text-secondary mt-1">
                    This action will permanently remove the inventory item from the system.
                </MudText>
            </div>
        </div>

        @if (Item != null)
        {
            <MudAlert Severity="Severity.Info" Class="mb-3">
                <MudText>Product: <strong>@Item.ProductName</strong></MudText>
                <MudText Class="mt-1">Location: <strong>@Item.LocationName</strong></MudText>
                <MudText Class="mt-1">On Hand: <strong>@Item.OnHand.ToString("N2")</strong></MudText>
                <MudText Class="mt-1">Available: <strong>@Item.Available.ToString("N2")</strong></MudText>
            </MudAlert>
        }

        @if (Item?.OnHand > 0)
        {
            <MudAlert Severity="Severity.Warning" Class="mb-3">
                <MudText><strong>Warning:</strong> This item has @Item.OnHand.ToString("N2") units on hand.</MudText>
                <MudText Class="mt-1">Deleting this item may affect inventory tracking and reports.</MudText>
            </MudAlert>
        }

        <MudAlert Severity="Severity.Error" Class="mb-3">
            <MudText><strong>Warning:</strong> This action cannot be undone.</MudText>
        </MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Delete" Disabled="@deleting">
            @if (deleting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Deleting...</MudText>
            }
            else
            {
                <MudText>Delete</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@inject ISnackbar Snackbar
@inject HttpClient HttpClient

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public InventoryItemDto? Item { get; set; }

    private bool deleting = false;

    private async Task Delete()
    {
        if (Item == null) return;

        deleting = true;
        try
        {
            var response = await HttpClient.DeleteAsync($"/api/admin/inventoryitems/{Item.Id}");

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Result<long>>();
                if (result?.Succeeded == true)
                {
                    MudDialog.Close(DialogResult.Ok(true));
                }
                else
                {
                    var errorMessage = result?.ErrorMessage ?? "Unknown error occurred";
                    Snackbar.Add($"Error: {errorMessage}", Severity.Error);
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Snackbar.Add($"Error deleting item: {errorContent}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error deleting item: {ex.Message}", Severity.Error);
        }
        finally
        {
            deleting = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}